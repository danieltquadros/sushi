generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid()) @db.Uuid
  email     String   @unique
  password  String
  firstName String
  lastName  String
  avatar    String?  @default("default.jpg")
  roles     String[] @default([])
  createdAt DateTime @default(now())
}

model Ticket {
  id        String   @id @default(uuid()) @db.Uuid
  name      String
  phone     String   @unique
  createdAt DateTime @default(now())
}

model Product {
  id          String        @id @default(uuid()) @db.Uuid
  name        String        @unique
  description String?
  ingredients Ingredients[]
}

model Ingredients {
  id      String  @id @default(uuid()) @db.Uuid
  name    String  @unique
  product Product @relation(fields: [id], references: [id])
}
